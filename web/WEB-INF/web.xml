<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>HelloWorld</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/HelloWorld</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loadMain</servlet-name>
        <servlet-class>loadMain</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loadMain</servlet-name>
        <url-pattern>/loadMain</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getUserInfo</servlet-name>
        <servlet-class>user.User</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getUserInfo</servlet-name>
        <url-pattern>/getUserInfo</url-pattern>
    </servlet-mapping>
</web-app>