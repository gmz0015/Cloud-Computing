<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Welcome Page -->
    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>team06.web.UI.IndexUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- test -->
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>testJMX</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <!-- Admin -->
    <servlet>
        <description>Managerment Page</description>
        <display-name>Admin</display-name>
        <servlet-name>Admin</servlet-name>
        <servlet-class>team06.web.UI.AdminUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <!-- Application -->
    <servlet>
        <description>Application</description>
        <display-name>Application</display-name>
        <servlet-name>Application</servlet-name>
        <servlet-class>team06.web.UI.ApplicationUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Application</servlet-name>
        <url-pattern>/application</url-pattern>
        <url-pattern>/application/deploy</url-pattern>
    </servlet-mapping>

    <!-- Application Detail -->
    <servlet>
        <description>Detail of the Application</description>
        <display-name>AppDetail</display-name>
        <servlet-name>AppDetail</servlet-name>
        <servlet-class>team06.web.UI.ApplicationDetailUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AppDetail</servlet-name>
        <url-pattern>/application/detail</url-pattern>
    </servlet-mapping>

    <!-- Application Create -->
    <servlet>
        <description>Create the Application</description>
        <display-name>AppCreate</display-name>
        <servlet-name>AppCreate</servlet-name>
        <servlet-class>team06.web.UI.ApplicationCreateUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AppCreate</servlet-name>
        <url-pattern>/application/create</url-pattern>
    </servlet-mapping>

    <!-- Login -->
    <servlet>
        <description>Login</description>
        <display-name>Login</display-name>
        <servlet-name>Login</servlet-name>
        <servlet-class>login.login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Switch User -->
    <servlet>
        <servlet-name>switchUser</servlet-name>
        <servlet-class>javabean.UserBean</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>switchUser</servlet-name>
        <url-pattern>/switchUser</url-pattern>
    </servlet-mapping>
</web-app>